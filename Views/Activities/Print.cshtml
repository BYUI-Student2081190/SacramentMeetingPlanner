@model SacramentMeetingPlanner.Models.Activity

@{
    ViewData["Title"] = "Print";
}

<h1>Print Meeting</h1>
<form>
    <div class="form-actions no-color">
        <p>Meeting: <select asp-items="ViewBag.MeetingsID" name="printMeeting"></select></p>
        <input type="submit" value="Search" class="btn btn-primary btn-spacing" />
    </div>
</form>

<!--Printable data-->
<div class="sacramentSheet">
    <div class="meetingTop">
        <h3>@ViewData["MeetingWard"]</h3>
        <h3>@ViewData["MeetingDate"]</h3>
        <h3>@ViewData["MeetingAddress"]</h3>
    </div>
    <div class="meetingBody">
        @foreach (string activity in ViewBag.PrintList)
        {
            // Create divs to hold the h3 elements.
            // Create a new h3 element per object in bag.
            @:<div>
                @:<h3>
                    @activity
                @:</h3>
            @:</div>
        }
    </div>
</div>